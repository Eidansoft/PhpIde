{
  "name": "phpide",
  "version": "1.0.0",
  "description": "PHPIde is a cloud IDE (Integrated Development Environment) solution created just for fun :-) This application has been developed by [my-self](https://www.linkedin.com/in/alejandro-d%C3%A9cimo-8b91b672) at my spare time. All sources are available at the [GIT repository](https://github.com/Eidansoft/PhpIde) on Github. Please feel free to try it out or giving me your feedback. I hope you enjoy.",
  "main": "mainController.js",
  "devDependencies": {
    "rimraf":         "= 2.5.0",
    "extract-zip":    "= 1.3.0",
    "unzip":          "= 0.1.11",
    "html-minifier":  "= 1.0.1"
  },
  "config": {
    "zippedfolder": "zip_dependencies/frontend",
    "libfolder":    "lib",
    "targetfolder": "target"
  },
  "scripts": {
    "clean":          "$(npm bin)/rimraf lib && $(npm bin)/rimraf target",
    "uncompress":     "$(npm bin)/extract-zip $npm_package_config_zippedfolder/angular-PubSub-master.zip $npm_package_config_libfolder/ && $(npm bin)/extract-zip $npm_package_config_zippedfolder/bootstrap-3.3.6-dist.zip  $npm_package_config_libfolder/ && $(npm bin)/extract-zip $npm_package_config_zippedfolder/CodeMirror-master.zip  $npm_package_config_libfolder/ && $(npm bin)/extract-zip $npm_package_config_zippedfolder/ui-bootstrap-0.14.3.min.zip  $npm_package_config_libfolder/",
    "createwebapp":   "html-minifier --output-dir $npm_package_config_zippedfolder/ --minify-js --minify-css --input-dir ./",
    "compile":        "npm run clean && npm run uncompress",
    "test":           "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url":  "git+https://github.com/Eidansoft/PhpIde.git"
  },
  "keywords": [
    "php",
    "ide",
    "angular",
    "codemirror",
    "pub-sub",
    "bootstrap"
  ],
  "author":   "Alejandro Lorente",
  "license":  "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Eidansoft/PhpIde/issues"
  },
  "homepage": "https://github.com/Eidansoft/PhpIde#readme"
}
